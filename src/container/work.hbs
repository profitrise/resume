{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  
   {{#with main}}    
  <main>
      <section>
       {{> title big=true data='My Work'}}
        <div>
          <ul>
          {{#each works}}
            <li>
              <div>
                {{position}}
              </div>
              <br>
              <div>{{duration.from}} - 
                {{#if duration.to}}
                {{duration.to}}
                {{else}}
                (досі працюємо)
                {{/if}}
                </div>
                <br>
             
              {{!-- <div><a href="{{company.url}}" target='_blank'>{{company.name}}</a></div> --}}
              {{!-- <div>{{> link text=company.name href=company.url blank=true notLine=true }}</div> --}}
            </li>
             <br>
             <div> {{#unless company.url includeZero=true}}
               <b>{{company.name}}</b>
                {{else}}
              {{> link text=company.name href=company.url blank=true notLine=true }}
              {{/unless}}
              
                        
            </div>
             <br>
              <div>
                <strong>Projects ({{projectAmount}})</strong>
              </div>
              <br>
              <ul>
                {{#each projects}}
                <li><div>                 
                  {{> link text=name href=url blank=true notLine=true }}
                </div>
                <div>
                  <p>{{about}}</p>
                </div>
                <div>
                  <em>Project stacks ({{stackAmount}})</em>
                  <br>
                  <br>
                  <ul>
                    {{#each stacks }}
                    <li>
                      {{name}}
                    </li>
                    {{/each}}
                  </ul>
                </div>
                </li>
                <br>
                <div>
                  <em>Awards</em>
                  <br>
                  <br>
                  <ul>
                    {{#each awards}}
                    <li>
                      {{name}}
                    </li>
                    {{/each}}
                  </ul>
                </div>
                {{/each}}
              </ul>
              <br>
           {{/each}}
        </ul>
       </div>
    </section>
  
  </main>
  {{/with}}

</div>

